<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    -->

<LinearLayout
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.patloew.georeferencingsample.SortableGeoLocationTableView
                android:id="@+id/tableViewGeo"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:layout_below="@id/toolbar"
                android:scrollIndicators="top|bottom|right|end"
                custom:tableView_columnCount="4"
                custom:tableView_headerColor="@color/primary"
                custom:tableView_headerElevation="10" >

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CheckBox" />
            </com.patloew.georeferencingsample.SortableGeoLocationTableView>


            <TextView
                android:id="@+id/textView9"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last update" />

            <TextView
                android:id="@+id/tv_last_update"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never" />

            <TextView
                android:id="@+id/textView10"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current location" />

            <TextView
                android:id="@+id/tv_current_location"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not available" />

            <TextView
                android:id="@+id/textView11"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current address" />

            <TextView
                android:id="@+id/tv_current_address"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not available" />

            <TextView
                android:id="@+id/textView_goToPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/RadioGrupaOsnowaLampion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_osnowa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Osnowa (posXY+valid gps/marker)" />

                    <RadioButton
                        android:id="@+id/radioButton_lampion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lampion" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/RadioGrupaButtonPositionSource"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </RadioGroup>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/RadioGrupa_osnowa"
                android:layout_width="558dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radioButton_osnowa_odl"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O: odl+Mar" />


                <RadioButton
                    android:id="@+id/radioButton_osnowa_xy"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O: x,y+Mar" />

                <RadioButton
                    android:id="@+id/radioButton_osnowa_marker"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O: mar" />

                <RadioButton
                    android:id="@+id/radioButton_osnowa_gps"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="O: gps" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/RadioGrupa_lampiony"
                android:layout_width="558dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radioButton_lampion_odl"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L: 2x odl+Mark" />


                <RadioButton
                    android:id="@+id/radioButton_lampion_xy"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="2dp"
                    android:maxWidth="3dp"
                    android:text="L: x,y+mark"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radioButton_lampion_marker"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="L: mark" />

                <RadioButton
                    android:id="@+id/radioButton_lampion_gps"
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="L: gps" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/Grupa_1_wartosc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner1_1"
                    android:layout_width="107dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="#3a3a3a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x [cm]=" />

                <EditText
                    android:id="@+id/offsetX_G1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName|number|numberSigned|numberDecimal|numberPassword"
                    android:numeric="integer|signed|decimal"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="y [cm]=" />

                <EditText
                    android:id="@+id/offsetY_G1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName|number|numberSigned|numberDecimal|numberPassword"
                    android:numeric="integer|signed|decimal"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Grupa_2_wartosci"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner2_1"
                    android:layout_width="52dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="?attr/colorPrimary" />

                <TextView
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x[cm]" />

                <EditText
                    android:id="@+id/wartosc_G2_1"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName|number|numberSigned|numberDecimal|numberPassword"
                    android:numeric="integer|signed|decimal"
                    android:text="" />

                <Spinner
                    android:id="@+id/spinner2_2"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/colorPrimary" />

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="y[cm]" />

                <EditText
                    android:id="@+id/wartosc_G2_2"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName|number|numberSigned|numberDecimal|numberPassword"
                    android:numeric="integer|signed|decimal"
                    android:text="" />

                <CheckBox
                    android:id="@+id/checkBoxLeftUpper"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L/U" />
            </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            </LinearLayout>

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 km=[cm]" />

                <EditText
                    android:id="@+id/textViewKmToCm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 cm = [m]" />

                <EditText
                    android:id="@+id/textViewCmToKm"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxKeepScreenAlive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep screen @string/library_acra_libraryVersion" />

            <Button
                android:id="@+id/buttonCenterMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Center Map on GPS" />

            <Button
                android:id="@+id/buttonCalculateDistances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate Distances" />

            <Button
                android:id="@+id/buttonShowPointsOnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Points on Map" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save" />

                <Button
                    android:id="@+id/buttonLoad"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Load" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonRemovePoint"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove current" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewInformacje"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:text="TextView" />

<!--            <com.google.android.gms.maps.MapView -->
            <com.patloew.georeferencingsample.CustomMapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="367dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
</layout>