<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    -->

<LinearLayout
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.patloew.georeferencingsample.SortableGeoLocationTableView
                android:id="@+id/tableViewGeo"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:layout_below="@id/toolbar"
                android:scrollIndicators="top|bottom|right|end"
                custom:tableView_columnCount="4"
                custom:tableView_headerColor="@color/primary"
                custom:tableView_headerElevation="10" />


            <TextView
                android:id="@+id/textView9"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last update" />

            <TextView
                android:id="@+id/tv_last_update"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never" />

            <TextView
                android:id="@+id/textView10"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current location" />

            <TextView
                android:id="@+id/tv_current_location"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not available" />

            <TextView
                android:id="@+id/textView11"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current address" />

            <TextView
                android:id="@+id/tv_current_address"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not available" />

            <TextView
                android:id="@+id/textView_goToPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/RadioGrupaOsnowaLampion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton_osnowa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Osnowa (posXY+valid gps/marker)" />

                    <RadioButton
                        android:id="@+id/radioButton_lampion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lampion" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonPositionSource_GPS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPS" />

                    <RadioButton
                        android:id="@+id/radioButtonPositionSource_measure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dystans" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ref:" />

                <RadioButton
                    android:id="@+id/radioButtonPointZero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="pkt 0" />

                <EditText
                    android:id="@+id/editTextReferencePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:imeOptions="actionSend"
                    android:text="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x [cm]=" />

                <EditText
                    android:id="@+id/offsetX"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName|number|numberSigned|numberDecimal|numberPassword"
                    android:numeric="integer|signed|decimal"
                    android:text="0.0" />

                <TextView
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="y [cm]=" />

                <EditText
                    android:id="@+id/offsetY"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName|number|numberSigned|numberDecimal|numberPassword"
                    android:numeric="signed|decimal"
                    android:text="0.0" />

            </LinearLayout>

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 km=[cm]" />

                <EditText
                    android:id="@+id/textViewKmToCm"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <TextView
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 cm = [km]" />

                <EditText
                    android:id="@+id/textViewCmToKm"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxKeepScreenAlive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep screen @string/library_acra_libraryVersion" />

            <Button
                android:id="@+id/buttonCenterMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Center Map on GPS" />

            <Button
                android:id="@+id/buttonCalculateDistances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate Distances" />

            <Button
                android:id="@+id/buttonShowPointsOnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Points on Map" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save" />

                <Button
                    android:id="@+id/buttonLoad"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Load" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonRemovePoint"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove current" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewInformacje"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:text="TextView" />

<!--            <com.google.android.gms.maps.MapView -->
            <com.patloew.georeferencingsample.CustomMapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="367dp" />

            <com.patloew.georeferencingsample.SortableCarTableView
                android:id="@+id/tableView"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_below="@id/toolbar"
                custom:tableView_columnCount="4"
                custom:tableView_headerColor="@color/primary"
                custom:tableView_headerElevation="10" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
</layout>